            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Height="25">
            <Label Content="ID"/>
            <TextBox x:Name="_idTextBox" Width="30" IsEnabled="False"/>
            <Label Content="Заголовок"/>
            <TextBox x:Name="_titleTextBox" Width="Auto"  />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Height="25">
            <Label Content="Источник"/>
            <TextBox x:Name="_sourceTextBox" Width="30" IsEnabled="False"/>
            <Label Content="Заголовок"/>
            <TextBox x:Name="d" Width="Auto"  />
            <Label Content="Дата публикации"/>
            <TextBox   />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Height="25">
            <Label Content="Источник"/>
            <TextBox  Width="30" IsEnabled="False"/>
            <Label Content="Заголовок"/>
            <TextBox   />
            <Label Content="Дата публикации"/>
            <TextBox   />
        </StackPanel>
    </Grid>
</Window>
